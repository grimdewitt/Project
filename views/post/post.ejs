<% include ../layout/header.ejs %>
<main>

  <div class="main">
    <div class="container">
      <div class="content">
          <div class="post">
            <div class="top">
              <h2>
                <%=post.title %>
              </h2>
            </div>
            <div class="body">
              <p><%=post.body %></p>
            </div>
            <div class="bottom">
              <div class="author">
                author:
                <a href="/">Master</a>
              </div>
              <a href="/">Comment</a>
            </div>
          </div>
          
          <div class="comments">
            <H3>comments</H3>
            <div class="comment-list">
              <span class="link" id="new">Send comment</span>
              <form class="comment">
                <textarea name="body"></textarea>
                <div class="buttons">
                  <button class="cancel">Cancel</button>
                  <button class="send">Ok</button>
                </div>
              </form>
            </div>
          </div>

  </div>

<div>
  <% include ../layout/sidebar.ejs %>
</div>


</main>

